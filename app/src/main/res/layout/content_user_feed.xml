<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.UserFeedActivity"

    tools:showIn="@layout/app_bar_user_feed">

    <FrameLayout
        android:id="@+id/place_holder_for_fragment"
        android:layout_width="match_parent"
        android:background="@color/windowback"
        android:layout_above="@+id/navigation"
        android:layout_height="match_parent">

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/tabs_background"
        app:itemTextColor="@color/tabs_background"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation" />
</RelativeLayout>